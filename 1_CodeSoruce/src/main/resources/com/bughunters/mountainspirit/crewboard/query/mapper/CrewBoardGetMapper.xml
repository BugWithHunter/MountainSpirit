<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bughunters.mountainspirit.crewboard.query.mapper.CrewBoardGetMapper">
    <resultMap id="getBoardMap" type="com.bughunters.mountainspirit.crewboard.query.dto.CrewBoardNameDTO">
        <id property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="createDate" column="CREATEDATE"/>
    </resultMap>
    <select id="selectBoardName" resultMap="getBoardMap" parameterType="map">
        SELECT
               A.ID
             , A.TITLE
             , A.CREATEDATE
          FROM CrewBoard A
         ORDER BY A.CREATEDATE DESC
        LIMIT #{offset}, #{limit}
    </select>
    <resultMap id="getBoardMap2" type="com.bughunters.mountainspirit.crewboard.query.dto.CrewBoardDTO">
        <id property="id" column="ID"/>
        <result property="title" column="TITLE"/>
        <result property="content" column="CONTENT"/>
        <result property="createDate" column="CREATEDATE"/>
        <result property="modifyDate" column="MODIFYDATE"/>
        <result property="isDeleted" column="ISDELETED"/>
        <result property="isNotice" column="ISNOTICE"/>
        <result property="crewId" column="CREWID"/>
        <result property="cumId" column="CUMID"/>
        <collection property="thumbnailDTOList" ofType="com.bughunters.mountainspirit.crewboard.query.dto.ThumbnailDTO">
            <result property="thumbnail" column="THUMBNAIL"/>
        </collection>
    </resultMap>
    <select id="selectBoardInfoByPostId" resultMap="getBoardMap2" parameterType="_int">
        SELECT
        A.ID
        , A.TITLE
        , A.CONTENT
        , A.CREATEDATE
        , A.MODIFYDATE
        , A.ISDELETED
        , A.ISNOTICE
        , A.CREWID
        , A.CUMID
        , B.THUMBNAIL
        FROM CrewBoard A
        LEFT JOIN CrewBoardImage B ON (A.ID = B.POSTID)
        WHERE A.ID = #{id}
    </select>
    <select id="selectBoardInfoByKeyword" resultMap="getBoardMap2" parameterType="string">
        SELECT
        A.ID
        , A.TITLE
        , A.CONTENT
        , A.CREATEDATE
        , A.MODIFYDATE
        , A.ISDELETED
        , A.ISNOTICE
        , A.CREWID
        , A.CUMID
        , B.THUMBNAIL
        FROM CrewBoard A
        LEFT JOIN CrewBoardImage B ON (A.ID = B.POSTID)
        WHERE A.TITLE LIKE CONCAT('%', #{keyword}, '%');
    </select>
</mapper>